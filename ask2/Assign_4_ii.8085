	IN 10H		;Άρση προστασίας μνήμης

	LXI H,0A05H	;Θεση μνημης που θα βαλουμε το αποτελεσμα
	MVI M,10H	;Θετουμε σβηστα τα 3 πρωτα BCD
	DCX H
	MVI M,10H
	DCX H
	MVI M,10H
	DCX H
	MVI M,10H
	
START:	LXI H,0A01H
	CALL KIND
	MOV B,A
	RRC		;Κρατάμε τα 4 MSBits άρα το πρώτο δεκαδικό ψηφίο
	RRC		;του κωδικού
	RRC
	RRC
	ANI 0FH
	MOV M,A	;βάζουμε το πρώτο ψηφίο του κωδικού
	MOV A,B	;Φέρνουμε τον Β στον Α
	ANI 0FH	;Κρατάμε τα 4 LSBits
	DCX H		;στη θέση 0Α00Η
	MOV M,A	;βάζουμε το δεύτερο ψηφίο του κωδικού

	LXI D,0A00H	;Βάζουμε στον D-E την θέση μνήμης όπου αρχίζουν τα	 
	CALL STDM	;δεδομένα που θέλουμε να δείξουμε καλούμε την STDM
	
	JMP START
END
